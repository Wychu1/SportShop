@using Antlr.Runtime
@model IEnumerable<SportShop.Models.CustomerGridViewModel>

<h2>List of customers</h2>

<p>
    <a href="@Url.Action("Add")" class ="btn btn-primary"><i class="icon-next"></i>Create</a>
</p>
<table class="table table-hover table-striped">
    <colgroup>
        <col />
        <col />
    </colgroup>
    <thead>
    <tr>
        <th>Id</th>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>Telefon</th>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.LastName</td>
                <td>@customer.Phone</td>
                <td>
                    @Html.ActionLink("Edycja", "Edit", new { id = customer.Id }, new { @class = "btn btn-primary" })
                @using (Html.BeginForm("Delete", "Customer"))
                {
                    @Html.Hidden("Id", customer.Id)
                    <button type="submit">Delete</button>
                }
            </td>
        </tr>
        }


    }
    </tbody>
</table>
