@using Antlr.Runtime
@model IEnumerable<SportShop.Models.CustomerGridViewModel>

<h2>List of customers</h2>

<p>
    <a href="@Url.Action("Add")" class ="btn btn-primary"><i class="icon-next"></i>Create</a>
</p>
<table class="table table-hover table-striped">
    <colgroup>
        <col />
        <col />
    </colgroup>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
        </tr>
    </thead>
    <tbody>
@{
            foreach (var customer in Model)
            {
        <tr>
            <td>@customer.Id</td>
            <td>@customer.Name</td>
            
        </tr>
    }
}
    </tbody>
</table>
